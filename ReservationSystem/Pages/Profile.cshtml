@page
@model Reservation.Pages.ProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<h2>User Profile</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Profile.Username"></label>
        <input asp-for="Profile.Username" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Profile.Email"></label>
        <input asp-for="Profile.Email" class="form-control" />
        <span asp-validation-for="Profile.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Profile.Gender"></label>
        <input asp-for="Profile.Gender" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Profile.Age"></label>
        <input asp-for="Profile.Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Profile.NewPassword"></label>
        <input asp-for="Profile.NewPassword" class="form-control" />
        <span asp-validation-for="Profile.NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Profile</button>
    </div>
    <div class="form-group text-success">
        @Model.SuccessMessage
    </div>
</form>
