@page
@model Reservation.Pages.CreateReservationModel
@{
    ViewData["Title"] = "Create Reservation";
}

<h1>Create Reservation</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Reservation.Roomid" class="control-label"></label>
        <select asp-for="Reservation.Roomid" class="form-control">
            @foreach (var room in Model.Rooms)
            {
                <option value="@room.Id">@room.Name</option>
            }
        </select>
        <span asp-validation-for="Reservation.Roomid" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reservation.Startdate" class="control-label"></label>
        <input asp-for="Reservation.Startdate" class="form-control" type="date" />
        <span asp-validation-for="Reservation.Startdate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reservation.Enddate" class="control-label"></label>
        <input asp-for="Reservation.Enddate" class="form-control" type="date" />
        <span asp-validation-for="Reservation.Enddate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reservation.Username" class="control-label"></label>
        <input asp-for="Reservation.Username" class="form-control" readonly />
        <span asp-validation-for="Reservation.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>